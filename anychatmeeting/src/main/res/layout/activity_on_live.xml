<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/on_live_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_meeting_wait">

    <RelativeLayout
        android:id="@+id/video_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.tydic.anychatmeeting.widget.AnyChatView
        android:id="@+id/localCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.tydic.anychatmeeting.widget.MenuLayout
        android:id="@+id/video_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
